{
  "name": "gitzoom-experiments",
  "displayName": "GitZoom Experiments",
  "description": "Run GitZoom experiments and view results inside VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gitzoom.runExperiment",
    "onCommand:gitzoom.recommendOptimization"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitzoom.runExperiment",
        "title": "GitZoom: Run Experiment"
      },
      {
        "command": "gitzoom.recommendOptimization",
        "title": "GitZoom: Recommend Staging Optimization"
      }
      ,
      {
        "command": "gitzoom.openRecommendationsMenu",
        "title": "GitZoom: Recommendations Menu"
      }
    ]
    ,
    "configuration": {
      "type": "object",
      "title": "GitZoom",
      "properties": {
        "gitzoom.pwshPath": {
          "type": "string",
          "default": "pwsh",
          "description": "Path to the PowerShell executable used to run experiments"
        },
        "gitzoom.recommendations.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable GitZoom's automatic recommendations"
        },
        "gitzoom.experiments.glob": {
          "type": "string",
          "default": "experiments/**/*.ps1",
          "description": "Glob pattern used to discover experiment scripts"
        },
        "gitzoom.dryRun": {
          "type": "boolean",
          "default": false,
          "description": "If true, recommendations will be shown but not applied"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@types/node": "^14.18.63",
    "typescript": "^4.0.0",
    "vscode": "^1.1.37"
  }
}
